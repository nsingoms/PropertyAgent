@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                   <a href="https://docs.microsoft.com/aspnet/" target="_blank">Welcome @context.User.FindFirst(c => c.Type.Contains("unique_name"))?.Value</a>
                </Authorized>
            </AuthorizeView>
           
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
